<main class= "container">
    <section class="jumbotron mb-3">
        <h2 class="m-3">Update Your Post</h2>
        <!-- Show the blog post here -->
        <article>
            <div id="{{id}}" class="currentBlog card mb-3">
                <div class="d-flex flex-fill card-header justify-content-between">
                    <input class="d-flex flex-fill mr-2 new-blog-title" type="text" value="{{blog_title}}">
                    <p class= "d-flex">Posted on {{format_date createdAt}}</p>
                </div>
                <div class="d-flex flex-fill card-body">
                    <textarea class="d-flex flex-fill card-text new-blog-body">{{blog_body}}</textarea>
                </div>
                <div class="card-footer">
                    <button class="update-post-btn btn btn-primary">Update Post</button>
                </div>
            </div>
        </article>
    </section>
</main>
{{> bootstrap-cdn}}
<script src="javascripts/updateBlog.js"></script>